@using ScavengerHunt.Web.Controllers
@using ScavengerHunt.Web.Resources
@model IEnumerable<ScavengerHunt.Web.Models.Stunt>

@{
    ViewBag.Title = Resources.DataManagement;
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Export</h4>
        @Html.Partial("DataExportPartial", new { ExportData = ViewBag.ExportData })
    </div>
    <div class="col-md-6">
        <h4>Import</h4>
        @Html.Partial("DataImportPartial", new { ExportData = ViewBag.ExportData })
    </div>
</div>

<h2>@Resources.Delete @Resources.Stunts</h2>
@using (Html.BeginForm("DeleteAll", "Stunt"))
{
    @Html.AntiForgeryToken()

    <input type="submit" value=@Resources.Delete class="btn btn-danger" />
}