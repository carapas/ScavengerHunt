@using ScavengerHunt.Web.Resources
@model IEnumerable<ScavengerHunt.Web.Models.Stunt>

@{
    ViewBag.Title = Resources.StuntList;
}

<h2>@ViewBag.Title</h2>

<br>
@if (ViewBag.settings.GuestStuntsVisible || User.Identity.IsAuthenticated)
{
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item, "StuntTitle")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxScore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
            </tr>
        }

    </table>
}
    
@section scripts
{
    <script type="text/javascript">
        $("[data-toggle=tooltip").tooltip();
        $("[data-toggle=popover").popover();
    </script>
}