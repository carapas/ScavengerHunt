@model IEnumerable<ScavengerHunt.Web.Models.EditUserViewModel>

@{
    ViewBag.Title = @Resources.ManageUsers;
}

<h2>@ViewBag.Title</h2>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink(@Resources.Edit, "Edit", new { id = item.UserName }) |
                @Html.ActionLink(@Resources.Roles, "UserRoles", new { id = item.UserName }) |
                @Html.ActionLink(@Resources.Delete, "Delete", new { id = item.UserName })
            </td>
        </tr>
    }

</table>