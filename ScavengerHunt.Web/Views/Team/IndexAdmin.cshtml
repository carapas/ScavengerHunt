@using ScavengerHunt.Web.Models
@model IEnumerable<ScavengerHunt.Web.Models.Team>

@{
    ViewBag.Title = Resources.ManageTeam;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(Resources.CreateNew, "Start") | @Html.ActionLink(Resources.DataManagement, "Data")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StuntCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Members)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item, "TeamName")
            </td>
            <td>@Html.DisplayFor(modelItem => item.Score)</td>
            <td>@Html.DisplayFor(modelItem => item.StuntCount)</td>
            <td>@Html.DisplayFor(modelItem => item.Members.Count)</td>
            <td>
                @Html.ActionLink(Resources.Edit, "Edit", new {id = item.Id}) |
                @Html.ActionLink(Resources.Edit + " " + Resources.Ranks, "EditRanks", new { id = item.Id }) |
                @Html.ActionLink(Resources.Description, "Details", new {id = item.Id}) |
                @Html.ActionLink(Resources.Delete, "Delete", new {id = item.Id})
            </td>
        </tr>
    }

</table>